<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vista.ActoresFragment">

    <!-- Capa 1: pantalla de carga -->
    <LinearLayout
        android:id="@+id/capa1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODO ACTORES"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/cinema"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/fondosplash"
            android:scaleType="fitXY"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Capa 2: pantalla principal (RecyclerView -->
    <LinearLayout
        android:id="@+id/capa2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lstActores"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"/>

    </LinearLayout>

</FrameLayout>