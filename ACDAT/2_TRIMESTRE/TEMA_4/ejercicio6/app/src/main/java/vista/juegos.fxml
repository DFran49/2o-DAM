<VBox alignment="CENTER" prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcm.ejercicio6.JuegosController">
    <Label alignment="CENTER" prefHeight="32.0" prefWidth="221.0" text="Biblioteca de Juegos">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>
    
       <HBox alignment="CENTER" prefHeight="81.0" prefWidth="500.0">
        <Button onAction="#refreshTable" text="Actualizar">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#addJuego" text="Añadir Juego">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#deleteByGenero" text="Eliminar por Género">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#updateJuego" text="Modificar Juego">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
    </HBox>
    
    <HBox alignment="CENTER" prefHeight="74.0" prefWidth="752.0">
        <Label text="Género:" />
        <ComboBox fx:id="generoCombo" prefWidth="150" />
