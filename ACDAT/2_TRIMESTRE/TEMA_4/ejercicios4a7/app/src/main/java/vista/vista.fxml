<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="386.0" prefWidth="603.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcm.ejercicios4a7.ejercicio6.ControllerJuegos">
    <Label alignment="CENTER" prefHeight="70.0" prefWidth="210.0" text="Gestión de Juegos">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>
    
       <HBox alignment="CENTER" prefHeight="111.0" prefWidth="752.0">
        <Button onAction="#actualizarTabla" text="Actualizar">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#añadirJuego" text="Añadir Juego">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#borrarPorGenero" text="Eliminar por Género">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
        <Button onAction="#actualizarJuego" text="Modificar Juego">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
    </HBox>
    
    <HBox alignment="CENTER" prefHeight="74.0" prefWidth="752.0">
        <Label text="Género:" />
        <ComboBox fx:id="cbGenero" prefWidth="150" />
    </HBox>
    
    <TableView fx:id="twJuegos" prefHeight="254.0" prefWidth="603.0">
        <columns>
            <TableColumn fx:id="colTitulo" prefWidth="200" text="Título" />
            <TableColumn fx:id="colGenero" prefWidth="150" text="Género" />
            <TableColumn fx:id="colPrecio" prefWidth="100" text="Precio" />
            <TableColumn fx:id="colLanzamiento" prefWidth="150" text="Fecha de Lanzamiento" />
        </columns>
    </TableView>
</VBox>
